{
  "name": "bondingcurve-tests",
  "version": "1.0.0",
  "description": "Test suite for the bonding curve smart contract",
  "scripts": {
    "test": "mocha --opts mocha.opts",
    "test:unit": "mocha tests/unit/**/*.test.ts --opts mocha.opts",
    "test:integration": "mocha tests/integration/**/*.test.ts --opts mocha.opts",
    "test:verbose": "TEST_VERBOSE=true npm run test",
    "test:watch": "npm run test -- --watch",
    "build": "tsc --build",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/web3.js": "^1.87.6",
    "@solana/spl-token": "^0.3.9",
    "@types/mocha": "^10.0.6",
    "@types/chai": "^4.3.11",
    "@types/node": "^20.10.4",
    "mocha": "^10.2.0",
    "chai": "^4.3.10",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "bn.js": "^5.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Bonding Curve Team",
  "license": "MIT"
} 